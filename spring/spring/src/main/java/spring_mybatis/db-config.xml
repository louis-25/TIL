<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  <!-- mybatis db 연결정보 세팅 파일 -->
<configuration>
	<!-- 1.타입 alias : 
	mybatis.EmpVO : SQL결과 데이터 저장 
	별명 : emp 
	-->
	<typeAliases>
		<typeAlias type="spring_mybatis.EmpVO" alias="emp"/> <!-- EmpVO는 emp로 표현하겠다 -->
	</typeAliases> 
	
 
	<!-- 스프링과 Mybatis를 연동할때 2번 3번 설정이 db-config가 아닌 스프링에서 해준다 
	2.DataSource 설정  
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" 
				value="oracle.jdbc.driver.OracleDriver"/>  오라클로 접속
				<property name="url" 
				value="jdbc:oracle:thin:@localhost:1521:xe"/>
				<property name="username" value="hr"/>
				<property name="password" value="hr"/>			
			</dataSource>
		</environment>
	</environments>
	
	 3. sql mapping 파일 설정 
	<mappers>
		<mapper resource = "mybatis/sql-mapping.xml"/>
	</mappers>
	-->  
</configuration>


